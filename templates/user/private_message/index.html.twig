{% extends 'user/user_home.html.twig' %}

{% block title %}Messagerie de {{ user.lastName }}{% endblock %}
{% block content%}
    <div class="profil border-top pb-2">
        {% include 'user/Components/list_functionality_top.htm.twig' %}
    </div>
    <hr>
    <table class="table table-striped table-hove">
        <thead>
        <tr>
            <th scope="col">Utilisateurs</th>
            <th scope="col">Derniere Messages</th>
            <th scope="col">Date</th>
            <th scope="col">action</th>
        </tr>
        </thead>
        <tbody>
        {% for conversationList in conversationList %}
        <tr>
            <th scope="row">{{ conversationList.slug }}</th>
            <td>{{ conversationList.content }}</td>
            <td>{{ conversationList.createdAt | ago }}</td>
            <td>
                <button class="btn btn-info"><a href="{{ path('private_message_postMessage', {'id': conversationList.conversationId}) }}"><i class="fas fa-eye"></i></a></button>
                {#<button class="btn btn-danger"><i class="fas fa-trash"></i></button>#}
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
